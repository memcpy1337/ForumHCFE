@model ForumHCFE.Models.Forum.ForumTopicModel

<h1>Добро пожаловать на ветку компании @Model.Forum.Name</h1>
@if (Model.Posts.Any())
{
    <table class="table table-bordered table-hover">
        <tbody>
            @foreach (var post in Model.Posts)
{
                <tr>
                    <td>
                        <a asp-controller="Post" asp-action="Index" asp-route-id="@post.Id">
                            @post.Title
                        </a>
                        
                    </td>
                    <td>
                        @post.Author
                    </td>
                    <td>
                        @post.DatePosted
                    </td>
                    <td>
                        @post.RepliesCount
                    </td>
                </tr>
}
        </tbody>
    </table>
}
else
{
    <div class="noPosts">
        <h3>
            На данный момент нет тредов о этой компании. <br />
            <a asp-controller="Post" asp-action="Create" asp-route-id="@Model.Forum.Id">
                <span>Создать</span>
            </a>
        </h3>
    </div>
}