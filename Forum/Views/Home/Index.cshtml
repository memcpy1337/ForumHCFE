@model  ForumHCFE.Models.Home.HomeIndexModel

<div class="container body-content">
    <div class="row frontPageSplash">
        <div class="col-md-6" frontPageLearn">
            <div class="frontPageHeading">Делитесь опытом работы или практики в компаниях</div>
            <p class="frontPageSubHeading">Joblex - лучший форум о работах</p>
            <div>
                <form asp-controller="Search" asp-action="Search" method="post">
                    <input asp-for="SearchQuery" type="text" class="homeSearch" placeholder="Search..."/>
                </form>
            </div>

            </div>
        <div class="col-md-6"></div>

    </div>

    <div class="row frontPageContent">
        <h3 id="latestPosts">Последние обсуждения</h3>
        <table class="table table-hover" id="latestPostsTable">
            <tbody>
                @foreach(var post in Model.LatestPosts)
                    {
                    <tr>
                        <td>
                            <div class="forumLogo" style="background-image: url(@post.Forum.ImageUrl); background-size=100%"></div>
                            <div class="postTitle">
                                <a asp-controller="Post" asp-action="Index" asp-route-id="@post.Id">
                                    @post.Title
                                </a>
                            </div>
                            <div class="postSubTitle">
                                @if (post.RepliesCount == 1)
                                {
                                    <span>@post.RepliesCount ответов</span>
                                }
                                @if (post.RepliesCount == 0)
                                {
                                    <span>Нет ответов</span>
                                }
                                else
                                {
                                    <span>@post.RepliesCount ответов</span>
                                }
                                <span class="postUser">
                                <a asp-controller="Profile" asp-action="Detailt" asp-route-id="@post.AuthorId">@post.Author</a>
                                </span>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
